{
  "name": "project-linkage-001",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn run-p build:*",
    "build:css": "yarn sass app/DAS_framework/css/app.scss public/build/app.css",
    "build:js": "cd frontend-svelte; rollup -c",
    "dev": "yarn run-p dev:*",
    "dev:api": "yarn json-server --watch frontend-svelte/db.json",
    "dev:frontend": "cd frontend-svelte; rollup -c -w",
    "start": "sirv public --no-clear",
    "check": "yarn prettier -c ."
  },
  "engines": {
    "node": "14.16.0",
    "yarn": "1.22.10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "json-server": "^0.16.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "rollup": "^2.55.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.37.0",
    "svelte": "^3.41.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "sirv-cli": "^1.0.12"
  }
}
